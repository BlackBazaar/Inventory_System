@using Inventory_Sys.Models
@model List<Admin_tbl>
@{
    ViewBag.Title = "admins";
}

<!--page content-->
<div class="absolute top-20 pr-8 left-0 lg:left-80 z-0 px-4 h-full w-full md:w-4/5">
    <table class="table-auto w-full">
        <thead>
            <tr class="bg-gray-100 text-left">

                <th class="px-4 py-2">FirstName</th>
                <th class="px-4 py-2">LastName</th>
                <th class="px-4 py-2">Department</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">PhoneNumber</th>
                <th class="px-4 py-2">Role</th>
                <th class="px-4 py-2"></th>
                <th class="px-4 py-2">
                    @if (Session["Role"].ToString() == "SuperAdmin")
                    {
                        <a href="@Url.Action("NewAdmin", "AdminAdd", new { area = "" })" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition">Add</a>
                    }
                    </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr class="border-b border-gray-200">

                    <td class="px-4 py-2">@admin.FirstName</td>
                    <td class="px-4 py-2">@admin.LastName</td>
                    <td class="px-4 py-2">@admin.Department</td>
                    <td class="px-4 py-2">@admin.Email</td>
                    <td class="px-4 py-2">@admin.PhoneNumber</td> <!-- Corrected position -->
                    <td class="px-4 py-2">@admin.Role</td>
                    <td class="px-4 py-2">
                        @if (Session["Role"].ToString() == "SuperAdmin")
                        {
                            <a href="/AdminAdd/AdminRemove/@admin.AdminID" class="text-red-600 hover:text-red-900">Delete</a>
                        }
                        </td>
                    <td class="px-4 py-2">
                        @if (Session["Role"].ToString() == "SuperAdmin")
                        {
                            <a href="/AdminAdd/AdminEdit/@admin.AdminID" class="text-green-600 hover:text-green-900">Update</a>
                        }
                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!--/page content-->
