@using Inventory_Sys.Models
@model List<Devices_tbl>
@{
    ViewBag.Title = "Devices";
}

<!--page content-->
<div class="absolute top-20 pr-8 left-0 lg:left-80 z-0 px-4 h-full w-full md:w-4/5">
    <table class="table-auto w-full">
        <thead>
            <tr class="bg-gray-100 text-left">
                <th class="px-4 py-2">Brand</th>
                <th class="px-4 py-2">Model</th>
                <th class="px-4 py-2">SerialNumber</th>
                <th class="px-4 py-2">PurchaseDate</th>
                <th class="px-4 py-2">Status</th>
                <th class="px-4 py-2">LastMaintenanceDate</th>
                <th class="px-4 py-2">Retired</th>
                <th class="px-4 py-2">Details</th>
                <th class="px-4 py-2"></th>
                <th class="px-4 py-2">
                    <a href="@Url.Action("DevicesPdf", "Device")" style="color: white; background-color: blue; padding: 10px 15px; text-decoration: none; border-radius: 5px;">Get PDF</a>
                </th>
                <th class="px-4 py-2">
                    @if (Session["Role"].ToString() == "Admin" || Session["Role"].ToString() == "SuperAdmin")
                    {
                        <a href="@Url.Action("AddDevice", "Device", new { area = "" })" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition">Add</a>
                    }
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Model)
            {
                <tr class="border-b border-gray-200">
                    <td class="px-4 py-2">@device.Brand</td>
                    <td class="px-4 py-2">@device.Model</td>
                    <td class="px-4 py-2">@device.SerialNumber</td>
                    <td class="px-4 py-2">@device.PurchaseDate</td>
                    <td class="px-4 py-2">@device.Status</td>
                    <td class="px-4 py-2">@device.LastMaintenanceDate</td>
                    <td class="px-4 py-2">@device.Retired</td>
                    <td class="px-4 py-2">@device.Details</td>

                    <td class="px-4 py-2">
                        @if (Session["Role"].ToString() == "Admin" || Session["Role"].ToString() == "SuperAdmin")
                        {
                            <a href="/Device/DeviceRemove/@device.DeviceID" class="text-red-600 hover:text-red-900">Delete</a>
                        }
                    </td>
                    <td class="px-4 py-2">
                        @if (Session["Role"].ToString() == "Admin" || Session["Role"].ToString() == "SuperAdmin")
                        {
                            <a href="/Device/DeviceEdit/@device.DeviceID" class="text-green-600 hover:text-green-900">Update</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!--/page content-->
