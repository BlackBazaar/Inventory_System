@using Inventory_Sys.Models
@model List<Employee_tbl>
@{
    ViewBag.Title = "Employees";
}

<!--page content-->
<div class="absolute top-20 pr-8 left-0 lg:left-80 z-0 px-4 h-full w-full md:w-4/5">
    <table class="table-auto w-full">
        <thead>
            <tr class="bg-gray-100 text-left">

                <th class="px-4 py-2">FirstName</th>
                <th class="px-4 py-2">LastName</th>
                <th class="px-4 py-2">Department</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">PhoneNumber</th>
                <th class="px-4 py-2">Role</th>
                <th class="px-4 py-2"></th>
                <th class="px-4 py-2">
                    <a href="@Url.Action("NewEmployee", "EmployeeAdd", new { area = "" })" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition">Add</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr class="border-b border-gray-200">

                    <td class="px-4 py-2">@employee.FirstName</td>
                    <td class="px-4 py-2">@employee.LastName</td>
                    <td class="px-4 py-2">@employee.Department</td>
                    <td class="px-4 py-2">@employee.Email</td>
                    <td class="px-4 py-2">@employee.PhoneNumber</td> <!-- Corrected position -->
                    <td class="px-4 py-2">@employee.Role</td>
                    <td class="px-4 py-2">
                        <a href="/EmployeeAdd/EmployeeRemove/@employee.EmployeeID" class="text-red-600 hover:text-red-900">Delete</a>
                    </td>
                    <td class="px-4 py-2">
                        <a href="/EmployeeAdd/EmployeeEdit/@employee.EmployeeID" class="text-green-600 hover:text-green-900">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!--/page content-->
