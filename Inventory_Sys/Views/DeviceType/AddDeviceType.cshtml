@model Inventory_Sys.Models.Device_Type_tbl

@{
    ViewBag.Title = "Add Device Type";
}

<div class="max-w-4xl mx-auto mt-8 bg-white p-6 rounded-md shadow-md">
    @using (Html.BeginForm("AddDeviceType", "DeviceType", FormMethod.Post, new { @class = "space-y-4" }))
    {
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-2 gap-4">
            <div>
                @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
                @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm", @required = "required" } })
                @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-red-500" })
            </div>
        </div>
        <div class="flex justify-end mt-4">
            <a href="@Url.Action("DeviceTypes", "DeviceType", new { area = "" })" type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-danger-600 transition" style="background-color:red">Remove Device Type</a>
        </div>
        <div class="flex justify-end mt-4">
            <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition">Add Device Type</button>
        </div>
    }
</div>
